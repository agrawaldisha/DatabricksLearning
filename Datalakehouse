    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // Navigation Scrolling
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const targetId = link.getAttribute('href').substring(1);
                    const targetElement = document.getElementById(targetId);
                    
                    if (targetElement) {
                        targetElement.scrollIntoView({ behavior: 'smooth' });
                        
                        navLinks.forEach(l => l.classList.remove('active'));
                        link.classList.add('active');
                    }
                });
            });
            
            // Intersection Observer for active nav state
            const sections = document.querySelectorAll('section');
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        navLinks.forEach(link => {
                            link.classList.toggle('active', link.getAttribute('href').substring(1) === entry.target.id);
                        });
                    }
                });
            }, { rootMargin: '-30% 0px -70% 0px' });
            
            sections.forEach(section => observer.observe(section));

            // Tabs Logic
            const tabButtons = document.querySelectorAll('.tab-btn');
            const tabPanels = document.querySelectorAll('.tab-panel');

            tabButtons.forEach(button => {
                button.addEventListener('click', () => {
                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    button.classList.add('active');

                    const targetPanelId = button.getAttribute('data-target');
                    tabPanels.forEach(panel => {
                        if (panel.id === targetPanelId) {
                            panel.classList.remove('hidden');
                        } else {
                            panel.classList.add('hidden');
                        }
                    });
                });
            });

            // Chart.js Logic
            const ctx = document.getElementById('architectureChart').getContext('2d');
            if (ctx) {
                const architectureChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ['Cost', 'Complexity', 'Data Governance', 'AI/ML Readiness'],
                        datasets: [
                            {
                                label: 'Traditional Stack (DL + DW)',
                                data: [8, 9, 3, 2],
                                backgroundColor: 'rgba(217, 119, 6, 0.6)', 
                                borderColor: 'rgba(217, 119, 6, 1)',
                                borderWidth: 1,
                                borderRadius: 4
                            },
                            {
                                label: 'Data Lakehouse',
                                data: [3, 2, 9, 9],
                                backgroundColor: 'rgba(13, 148, 136, 0.6)',
                                borderColor: 'rgba(13, 148, 136, 1)',
                                borderWidth: 1,
                                borderRadius: 4
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        indexAxis: 'x',
                        scales: {
                            y: {
                                beginAtZero: true,
                                max: 10,
                                ticks: {
                                    stepSize: 1,
                                    callback: function(value) {
                                        if (value === 0) return 'Low';
                                        if (value === 10) return 'High';
                                        return '';
                                    }
                                }
                            }
                        },
                        plugins: {
                            title: {
                                display: true,
                                text: 'Architecture Value Proposition (Relative Score)',
                                font: {
                                    size: 16,
                                    weight: '600'
                                },
                                padding: {
                                    bottom: 10
                                }
                            },
                            tooltip: {
                                enabled: true,
                                mode: 'index',
                                intersect: false,
                                callbacks: {
                                    label: function(context) {
                                        let label = context.dataset.label || '';
                                        if (label) {
                                            label += ': ';
                                        }
                                        if (context.parsed.y !== null) {
                                            label += context.parsed.y + '/10';
                                        }
                                        return label;
                                    }
                                }
                            }
                        }
                    }
                });
            } else {
                console.error("Chart.js canvas element not found.");
            }
        });
    </script>
